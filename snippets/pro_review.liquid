<div class="product_reviews drawers-container-child">
  <div class="drawer reviews__drawer ">
    <div class="drawer__inner">
      <div class="drawer__header reviews__header">
        <div class="drawer__header-title">Reviews</div>
        <a href="javascript:void(0);" class="review__close">
          <svg
            enable-background="new 0 0 386.667 386.667"
            height="512"
            viewBox="0 0 386.667 386.667"
            width="512"
            xmlns="http://www.w3.org/2000/svg"
            fill="currentcolor"
            class="icon icon-close"
          >
            <path d="m386.667 45.564-45.564-45.564-147.77 147.769-147.769-147.769-45.564 45.564 147.769 147.769-147.769 147.77 45.564 45.564 147.769-147.769 147.769 147.769 45.564-45.564-147.768-147.77z"></path>
          </svg>
          <span class="sr-only">Close Review drawer</span></a
        >
      </div>
      <div class="drawer__body-contents reviews__body">
        <!-- Start of Judge.me code -->
        <div style="clear:both"></div>
        <div id="judgeme_product_reviews" class="jdgm-widget jdgm-review-widget" data-id="{{ product.id }}">
          {{ product.metafields.judgeme.widget }}
        </div>
        <!-- End of Judge.me code -->
      </div>
    </div>
  </div>
  <div class="drawer-backdrop"></div>
</div>
