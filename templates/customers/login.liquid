<div id="layout-main-content">
  <div id="shopify-section-customers-login" class="shopify-section">
    <div class="account__bg-image-container" style="background-color: #adbebc;">
      <img
        src="//municipal.com/cdn/shop/files/NEW-SIGNIN.jpg?v=1677676868"
        srcset="//municipal.com/cdn/shop/files/NEW-SIGNIN.jpg?v=1677676868&amp;width=48 48w,//municipal.com/cdn/shop/files/NEW-SIGNIN.jpg?v=1677676868&amp;width=85 85w,//municipal.com/cdn/shop/files/NEW-SIGNIN.jpg?v=1677676868&amp;width=90 90w,//municipal.com/cdn/shop/files/NEW-SIGNIN.jpg?v=1677676868&amp;width=112 112w,//municipal.com/cdn/shop/files/NEW-SIGNIN.jpg?v=1677676868&amp;width=256 256w,//municipal.com/cdn/shop/files/NEW-SIGNIN.jpg?v=1677676868&amp;width=320 320w,//municipal.com/cdn/shop/files/NEW-SIGNIN.jpg?v=1677676868&amp;width=480 480w,//municipal.com/cdn/shop/files/NEW-SIGNIN.jpg?v=1677676868&amp;width=640 640w,//municipal.com/cdn/shop/files/NEW-SIGNIN.jpg?v=1677676868&amp;width=750 750w,//municipal.com/cdn/shop/files/NEW-SIGNIN.jpg?v=1677676868&amp;width=828 828w,//municipal.com/cdn/shop/files/NEW-SIGNIN.jpg?v=1677676868&amp;width=1080 1080w,//municipal.com/cdn/shop/files/NEW-SIGNIN.jpg?v=1677676868&amp;width=1200 1200w,//municipal.com/cdn/shop/files/NEW-SIGNIN.jpg?v=1677676868&amp;width=1920 1920w,//municipal.com/cdn/shop/files/NEW-SIGNIN.jpg?v=1677676868&amp;width=2048 2048w,//municipal.com/cdn/shop/files/NEW-SIGNIN.jpg?v=1677676868&amp;width=3840 3840w"
        class="account__bg-image"
        sizes="100vw"
        loading="eager"
        alt=""
      >
    </div>

    <div id="account__layout">
      <div class="container">
        <div class="row justify-content-center">
          <div class="account__info-container account__info-container--thin-padding">
            {% comment %}
              <div class="form-success" id="ResetSuccess">
                We've sent you an email with a link to update your password.
              </div>
            {% endcomment %}
            <div id="CustomerLoginForm">
              <h2 class="account__header">SIGN IN</h2>
              <div class="account__description">For quick checkout and account history.</div>
              {% form 'customer_login' %}
                {{ form.errors | default_errors }}

                <div id="login_email" class="form-group">
                  <input
                    type="email"
                    value=""
                    name="customer[email]"
                    placeholder="Email Address"
                    id="customer_email"
                    class="form-control account-form__field"
                    size="30"
                  >
                </div>

                {% if form.password_needed %}
                  {% comment %}
                    Customer Account Login
                  {% endcomment %}

                  <div id="login_password" class="form-group">
                    <input
                      type="password"
                      value=""
                      placeholder="Password"
                      name="customer[password]"
                      id="customer_password"
                      class="form-control account-form__field"
                      size="16"
                    >
                  </div>
                  <div class="mb-0 form-group form-group__button text-center">
                    <input class="btn btn-primary" type="submit" value="Sign In">
                  </div>
                  <div id="form-group text-center mb-0">
                    <div class="mb-2">
                      <a
                        href="#recover"
                        class="recover-password-link p6"
                        >Forgot your password?</a
                      >
                    </div>
                    <a href="/account/register" data-register-form="" class="btn btn-link btn-small">
                      Create Account
                    </a>
                  </div>
                {% endif %}
              {% endform %}
            </div>

            {% comment %}
                {% form 'customer_login' %}
                  {{ form.errors | default_errors }}

                  <div id="login_email" class="clearfix large_form">
                    <label for="customer_email" class="login">Email Address</label>
                    <input type="email" value="" name="customer[email]" id="customer_email" class="large" size="30">
                  </div>

                  {% if form.password_needed %}

                      Customer Account Login



                    <div id="login_password" class="clearfix large_form">
                      <label for="customer_password" class="login">Password</label>
                      <input
                        type="password"
                        value=""
                        name="customer[password]"
                        id="customer_password"
                        class="large password"
                        size="16"
                      >
                      <div id="forgot_password">
                        <a href="#" onclick="showRecoverPasswordForm();return false;">Forgot your password?</a>
                      </div>
                    </div>
                  {% endif %}

                  <div class="action_bottom">
                    <input class="btn" type="submit" value="Sign In">
                    <span class="note">or <a href="{{ shop.url }}">Return to Store</a></span>
                  </div>
                {% endform %}
              </div>


                Recover Password Form
            {% endcomment %}

            <div id="recover-password" style="display:none;">
              <h2 class="account__header">Reset Password</h2>
              <p class="account__description">We will send you an email to reset your password.</p>

              {% form 'recover_customer_password' %}
                {{ form.errors | default_errors }}

                <div id="recover_email" class="form-group">
                  <input
                    type="email"
                    value=""
                    size="40"
                    name="email"
                    placeholder="Email"
                    id="RecoverEmail"
                    class="form-control account-form__field"
                    autocorrect="off"
                    autocapitalize="off"
                    autocomplete="email"
                  >
                </div>
                <div class="mb-0 form-group form-group__button text-center">
                  <div class="mb-2">
                    <input class="btn btn-primary" type="submit" value="Submit">
                  </div>
                </div>
                <div class="form-group text-center mb-0">
                  <button
                    type="button"
                    onclick="hideRecoverPasswordForm()"
                    class="btn btn-link"
                    data-hide-recover-password-form=""
                  >
                    <small> Cancel </small>
                  </button>
                </div>
              {% endform %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {% comment %}
    Guest Login form for shops with optional customer accounts. This form is displayed only when users click on the checkout link
    on the cart page.
  {% endcomment %}

  {% if shop.checkout.guest_login %}
    <div id="guest">
      <div class="template_header">
        <h3 class="title">Guest Login</h3>
      </div>
      {% form 'guest_login' %}
        <input class="btn" type="submit" value="Continue as Guest">
      {% endform %}
    </div>
  {% endif %}
</div>

<script type="text/javascript">
  function showRecoverPasswordForm() {
    document.getElementById('recover-password').style.display = 'inline-block';
    document.getElementById('CustomerLoginForm').style.display='none';
  }

  function hideRecoverPasswordForm() {
    document.getElementById('recover-password').style.display = 'none';
    document.getElementById('CustomerLoginForm').style.display = 'inline-block';
  }

  if (window.location.hash == '#recover') { showRecoverPasswordForm() }
</script>
