/* SECTIONS : FAQ start */
.faq_box {
  background: #f5f5f6 !important;
}
.faq_box {
  background: #f5f5f6 !important;
}
.faq_box .circle-chevron {
  width: 26px;
  height: 26px;
  border-radius: 9999px;
  background: #1a1a1a1a;
  flex-shrink: 0;
  place-items: center;
  transition: all 0.2s ease-in-out;
  display: grid;
  cursor: pointer;
}
.faq_box .accordion.group:last-child {
  border: none;
}
.faq_box .accordion__content {
  padding-top: 15px;
  padding-bottom: 15px;
  padding-inline-end: 1.5rem;
}
.gap-10 {
  gap: 1.5rem;
}
.section-stack__intro .faq-availability {
  text-align: start;
  justify-items: start;
}
.gap-4 {
  gap: 1rem;
}
.faq-availability {
  gap: 1.5rem;
  text-align: center;
  justify-items: center;
  display: grid;
}
.faq_box .accordion__toggle {
  font-size: 16px;
  color: #1a1a1a;
  font-family: Sequel Sans Title;
  letter-spacing: 0.7px;
  cursor: pointer;
  align-items: center;
  line-height: 1;
  gap: 0.5rem;
}
.faq_box .accordion__toggle:hover .circle-chevron {
  background: #000;
  color: #fff;
}
.faq_box .accordion.group {
  margin: 0;
  border-bottom: 1px solid rgb(26 26 26 / 12%);
  border-radius: 0;
  padding: 15px 0;
  background: transparent;
}
.faq_box p {
  font-size: 15px;
  line-height: 26px;
  color: #6e6e6e;
}
/* SECTIONS : FAQ end */

/* SECTIONS : Collection links start */
.featured-categories {
  background-color: #121212;
  border-top: 2px solid #393d49;
  line-height: 1;
  max-width: 100%;
  padding: 16px 0 !important;
  position: relative !important;
}
.category-capsule {
  background-color: transparent;
  border: 2px solid #fff;
  border-radius: 100px;
  color: #fff;
  display: inline-block;
  font-family: Sequel Sans Title, sans-serif;
  font-size: 14px;
  line-height: 1;
  padding: 10px 30px;
  transition: 0.15s cubic-bezier(0.42, 0, 0.13, 1.04);
  transition-property: color, background-color;
  white-space: nowrap;
  width: -webkit-fit-content;
  width: -moz-fit-content;
  width: fit-content !important;
}
.category-capsule:focus {
  background-color: #fff;
  color: #121212;
}
.category-capsule:hover {
  background-color: #fff;
  color: #121212;
}
.featured-categories__navigation {
  height: 74px;
  pointer-events: none;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 100%;
  z-index: 1;
}
.featured-categories__navigation-area {
  background: linear-gradient(90deg, rgba(255, 255, 255, 0.3), transparent);
  cursor: pointer;
  height: 100%;
  left: 0;
  opacity: 0;
  pointer-events: all;
  position: absolute;
  top: 0;
  width: 50px;
}
.featured-categories__navigation-area:hover {
  opacity: 1;
}
.featured-categories__navigation-area--next {
  left: unset;
  right: 0;
  transform: scale(-1);
}
/* SECTIONS : Collection links end */

@media (max-width: 1199px) {
  .faq_box .icon_text.desk {
    display: none;
  }
  .faq_box .icon_text.mob {
    display: block !important;
  }
  .faq_box .section-stack__main {
    width: 100%;
  }
  .faq_box .v-stack {
    display: grid;
    justify-items: center;
  }
}
@media (max-width: 767px) {
  .faq_box {
    padding: 60px 24px;
    background: #fff !important;
  }
  .faq_box .accordion__toggle {
    font-size: 13px;
  }
}
