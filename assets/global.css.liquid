/* common */
.hidden {
    display: none !important;
}
[role="main"] .shopify-section {
  --section-is-first: 0;
  --hash-difference: calc(
    var(--section-background-hash) -
      var(--previous-section-background-hash, -1)
  );
  --hash-difference-abs: max(
    var(--hash-difference),
    -1 * var(--hash-difference)
  );
  --background-differs-from-previous: max(
    0,
    min(var(--hash-difference-abs, 1), 1)
  );
  background: rgb(var(--background));
  position: relative;
}
[role="main"] .shopify-section:not(.contents) {
  display: flow-root;
}
[role="main"] .shopify-section:empty {
  display: none;
}

/* section class */
.card-slider {
  position: relative;
}
.section-rounded {
  border-radius: 25px;
  box-shadow: 0 18px 50px #1a1a1a1a;
}

@media and (max-width: 991px) {
  .card-slider {
    padding: 60px 30px;
  }
  .section-boxed{
    padding: 0 24px;
  }
}
@media and (min-width: 992px) and (max-width: 1199px) {
  .section-boxed{
    padding: 48px;
  }
  .card-slider{
    padding: 100px 50px;
  }
}
@media (min-width: 1200px) {
  .section-boxed{
    padding: 72px;
  }
  .card-slider{
    padding: 100px 50px;
  }
}