.hidden {
    display: none !important;
}
[role="main"] .shopify-section {
  --section-is-first: 0;
  --hash-difference: calc(
    var(--section-background-hash) -
      var(--previous-section-background-hash, -1)
  );
  --hash-difference-abs: max(
    var(--hash-difference),
    -1 * var(--hash-difference)
  );
  --background-differs-from-previous: max(
    0,
    min(var(--hash-difference-abs, 1), 1)
  );
  background: rgb(var(--background));
  position: relative;
}
[role="main"] .shopify-section:not(.contents) {
  display: flow-root;
}
[role="main"] .shopify-section:empty {
  display: none;
}

/* section class */
.card-slider {
  position: relative;
  padding: 100px 50px;
}
@media and (max-width: 991px) {
  .card-slider {
    padding: 60px 30px;
  }
}
