/* common */
*,:after,:before { 
  box-sizing: border-box;
}
.hidden {
    display: none !important;
}
[role="main"] .shopify-section {
  --section-is-first: 0;
  --hash-difference: calc(
    var(--section-background-hash) -
      var(--previous-section-background-hash, -1)
  );
  --hash-difference-abs: max(
    var(--hash-difference),
    -1 * var(--hash-difference)
  );
  --background-differs-from-previous: max(
    0,
    min(var(--hash-difference-abs, 1), 1)
  );
  background: rgb(var(--background));
  position: relative;
}
[role="main"] .shopify-section:not(.contents) {
  display: flow-root;
}
[role="main"] .shopify-section:empty {
  display: none;
}

/* section class */
.card-slider {
  position: relative;
}
.section-rounded {
  border-radius: 25px;
  box-shadow: 0 18px 50px #1a1a1a1a;
}
.section-stack--horizontal {
  justify-content: center;
  display: flex;
  gap: 3rem 4.5rem;
  grid-auto-columns: minmax(0,1fr);
}
.prose>:first-child{
  margin-block-start: 0 !important;  
}
.prose>:last-child{
  margin-block-end: 0 !important;
}
.bg-secondary {
  background: #f3f3f3!important;
}
.bg-light{
  background: #fff;
}
.rounded {
  border-radius: 12px;
}
.v-stack {
  display: grid;
}
.text-subdued {
  color: #6e6e6ecf;
}
.accordion-box {
  padding: 25px 40px;
}
.accordion {
  background-color: #f5f5f6;
  border: 2px solid transparent;
  border-radius: 10px;
  padding: 15px 20px;
  transition: none;
}
.accordion:first-child{
  margin-top: 10px;
}
.accordion__toggle {
  align-items: flex-start;
  background-color: transparent;
  border: none;
  display: flex;
  justify-content: space-between;
  margin: 0;
  padding: 0;
  width: 100%;
}
.accordion__content {
  padding-top: 15px;
  padding-bottom: 15px;
  padding-inline-end: 1.5rem;
}
@media (max-width: 991px) {
  .card-slider {
    padding: 60px 30px;
  }
  .section-boxed{
    padding: 0 24px;
  }
  .section-stack--horizontal {
      flex-wrap: wrap;
  }
  .section-stack__main {
    width: 100%;
  }
  .accordion-box {
    padding: 25px 24px;
  }
  .accordion__toggle {
      font-size: 13px;
  }

}
@media (min-width: 992px) and (max-width: 1199px) {
  .section-boxed{
    padding: 48px;
  }
  .card-slider{
    padding: 100px 50px;
  }
  .section-stack--horizontal {
    flex-wrap: wrap;
  }
  .section-stack__main {
    width: 100%;
  }
  .accordion {
    border: 3px solid transparent;
    padding: 42px 50px;
  }
  .accordion:not(:first-child) {
    margin-top: 20px;
  }
}
@media (min-width: 1200px) {
  .section-boxed{
    padding: 72px;
  }
  .card-slider{
    padding: 100px 50px;
  }
  .section-stack__intro {
    width: 50%;
  }
  .section-stack__main {
    width: 50%;
  }
  .accordion {
    border: 3px solid transparent;
    padding: 42px 50px;
  }
  .accordion:not(:first-child) {
    margin-top: 20px;
  }
}