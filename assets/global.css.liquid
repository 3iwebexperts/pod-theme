/* common */
*,:after,:before { 
  box-sizing: border-box;
}
.hidden {
    display: none !important;
}
[role="main"] .shopify-section {
  --section-is-first: 0;
  --hash-difference: calc(
    var(--section-background-hash) -
      var(--previous-section-background-hash, -1)
  );
  --hash-difference-abs: max(
    var(--hash-difference),
    -1 * var(--hash-difference)
  );
  --background-differs-from-previous: max(
    0,
    min(var(--hash-difference-abs, 1), 1)
  );
  background: rgb(var(--background));
  position: relative;
}
[role="main"] .shopify-section:not(.contents) {
  display: flow-root;
}
[role="main"] .shopify-section:empty {
  display: none;
}

/* section class */
.card-slider {
  position: relative;
}
.section-rounded {
  border-radius: 25px;
  box-shadow: 0 18px 50px #1a1a1a1a;
}
.section-stack--horizontal {
  justify-content: center;
  display: flex;
  gap: 3rem 4.5rem;
  grid-auto-columns: minmax(0,1fr);
}
.prose>:first-child{
  margin-block-start: 0 !important;  
}
.prose>:last-child{
  margin-block-end: 0 !important;
}
.bg-secondary {
  background: #f3f3f3!important;
}
.bg-light{
  background: #fff;
}
.rounded {
  border-radius: 12px;
}
@media (max-width: 991px) {
  .card-slider {
    padding: 60px 30px;
  }
  .section-boxed{
    padding: 0 24px;
  }
  .section-stack--horizontal {
      flex-wrap: wrap;
  }
  .section-stack__main {
    width: 100%;
  }
}
@media (min-width: 992px) and (max-width: 1199px) {
  .section-boxed{
    padding: 48px;
  }
  .card-slider{
    padding: 100px 50px;
  }
  .section-stack--horizontal {
    flex-wrap: wrap;
  }
  .section-stack__main {
    width: 100%;
  }
}
@media (min-width: 1200px) {
  .section-boxed{
    padding: 72px;
  }
  .card-slider{
    padding: 100px 50px;
  }
}