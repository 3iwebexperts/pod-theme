/* common */
/* BLOCKS : Heading start */
.h1,
.h2,
.h3,
.h4,
.h5,
.h6,
h1,
h2,
h3,
h4,
h5,
h6 {
  font-weight: 400;
  line-height: 1;
  font-family: Sequel Sans Title, sans-serif;
}
.h1, h1, .h2, h2 {
  text-transform: uppercase;
}
/* BLOCKS : Heading end */

/* mobile */
/* media 0 to 991 */
@media and (max-width: 991px) {
/* BLOCKS : Heading start */
  .h1, h1 {
    font-size: 32px;
  }
  .h2, h2 {
    font-size: 28px;
  }
  .h3, h3 {
    font-size: 26px;
  }
  .h4, h4 {
    font-size: 24px;
  }
  .h5, h5 {
    font-size: 18px;
  }
  .h6, h6 {
    font-size: 15px;
    line-height: 17px;
  }
/* BLOCKS : Heading end */
}

/* tablet */
/* media from 992 to 1199 */
@media and (min-width: 992px) and (max-width: 1199px) {
/* BLOCKS : Heading start */
  .h1, h1 {
    font-size: 50px;
  }
  .h2, h2 {
    font-size: 44px;
  }
  .h3, h3 {
    font-size: 41px;
  }
  .h4, h4 {
    font-size: 38px;
  }
  .h5, h5 {
    font-size: 28px;
  }
  .h6, h6 {
    font-size: 23px;
    line-height: 25px;
  }
/* BLOCKS : Heading end */
}

/* desktop */
/* media from 1200 to ++ */
@media (min-width: 1200px) {
/* BLOCKS : Heading start */
  .h1,
  h1 {
    font-size: 78px;
  }
  .h2,
  h2 {
    font-size: 68px;
  }
  .h3,
  h3 {
    font-size: 63px;
  }
  .h4,
  h4 {
    font-size: 60px;
  }
  .h5,
  h5 {
    font-size: 44px;
  }
  .h6,
  h6 {
    font-size: 37px;
    line-height: 39px;
  }
/* BLOCKS : Heading end */
}