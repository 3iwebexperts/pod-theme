/* common ============================================================= */
/* BLOCKS : Heading start */
.h1,
.h2,
.h3,
.h4,
.h5,
.h6,
h1,
h2,
h3,
h4,
h5,
h6 {
  font-weight: 400;
  line-height: 1;
  font-family: var(--heading-font);
}
.h1,
h1,
.h2,
h2 {
  text-transform: uppercase;
}
/* BLOCKS : Heading end */
/* BLOCKS : Content start */
p {
  margin-bottom: 1rem;
  margin-top: 0;
}
.p1,
.p2,
.p3,
.p4,
.p5,
.p6 {
  font-family: var(--content-font);
}
.p1 p,
p {
  font-size: 17px;
  line-height: 27px;
}
.p2 p {
  font-size: 15px;
  line-height: 22px;
  font-weight: 600;
}
.p3 p {
  font-size: 14px;
  line-height: 1.5;
}
.p4 p {
  font-size: 12px;
  line-height: 1.5;
}
.p5 p {
  font-size: 10px;
  line-height: 1.2;
}
.p6 p {
  font-size: 8px;
  line-height: 1.2;
}
.card-slider__copy {
  max-width: 600px;
}
/* BLOCKS : Content end */
/* BLOCKS : Button start */
a {
  background-color: transparent;
  text-decoration: inherit;
  color: #0f0;
}
a:hover {
  text-decoration: inherit;
}
.btn-link {
  font-size: 17px;
}
.btn {
  background-color: var(--btn-bg-color);
  border: 1.2px solid transparent;
  border-radius: 90px;
  color: var(--btn-color);
  display: inline-block;
  font-family: var(--btn-font);
  position: relative;
  text-align: center;
  transition: var(--btn-transaction);
  transition-property: background-color transform;
  -webkit-user-select: none;
  user-select: none;
  vertical-align: middle;
}
.btn-link {
  background: var(--link-bg-color);
  border: none;
  border-bottom: 2px solid;
  border-radius: 0;
  color: var(--link-color);
  display: inline-block;
  line-height: 1.5;
  padding: 0;
  position: relative;
  text-decoration: none;
}
.btn-link:before {
  border-bottom: 4px solid;
  content: "";
  display: block;
  left: 0;
  margin: auto;
  position: absolute;
  right: 0;
  top: 100%;
  transition: var(--btn-transaction);
  width: 0;
}
.btn-link:hover:before {
  border-bottom-width: 4px;
  width: 100%;
}
.btn-link:focus {
  box-shadow: none;
  text-decoration: none;
}
.btn-link:disabled {
  color: var(--btn-dis-color);
  pointer-events: none;
}
.card-slider__button {
  color: var(--link-color);
  display: inline-block;
  font-size: 18px;
  line-height: 1.5;
}
.card-slider__button:hover {
  color: var(--link-color);
}
.btn:disabled {
  opacity: 0.65;
}
.btn-white, .btn-white-m {
  background-color: var(--btn-bg-color);
  color: var(--btn-color);
}
.hero__btn {
  font-size: 17px;
  padding: 15px 58px;
}
/* BLOCKS : Button end */
/* BLOCKS : FAQs group start */
.accordion-box {
  padding: 25px 40px;
}
/* BLOCKS : FAQs group end */
/* BLOCKS : FAQs content start */
.accordion {
  background-color: #f5f5f6;
  border: 2px solid transparent;
  border-radius: 10px;
  padding: 15px 20px;
  transition: none;
}
.accordion:first-child{
  margin-top: 10px;
}
.accordion__toggle {
  align-items: flex-start;
  background-color: transparent;
  border: none;
  display: flex;
  justify-content: space-between;
  margin: 0;
  padding: 0;
  width: 100%;
}
/* BLOCKS : FAQs content end */
/* mobile ============================================================= */
/* media 0 to 991 */
@media and (max-width: 991px) {
  /* BLOCKS : Heading start */
  .h1,
  h1 {
    font-size: 32px;
  }
  .h2,
  h2 {
    font-size: 28px;
  }
  .h3,
  h3 {
    font-size: 26px;
  }
  .h4,
  h4 {
    font-size: 24px;
  }
  .h5,
  h5 {
    font-size: 18px;
  }
  .h6,
  h6 {
    font-size: 15px;
    line-height: 17px;
  }
  /* BLOCKS : Heading end */
  /* BLOCKS : Button start */
  .card-slider__button {
    font-size: 12px;
    line-height: 1.5;
  }
  .btn {
    font-size: 13px;
    line-height: 20px;
    padding: 12px 32px;
  }
  .hero__btn {
    font-size: 14px;
    padding: 8px 48px;
  }
  /* BLOCKS : Button end */
  /* BLOCKS : FAQs group start */
  .accordion-box {
    padding: 25px 24px;
  }
  /* BLOCKS : FAQs group end */
  /* BLOCKS : FAQs content start */
  .accordion__toggle {
      font-size: 13px;
  }
  /* BLOCKS : FAQs content end */
}

/* tablet ============================================================= */
/* media from 992 to 1199 */
@media and (min-width: 992px) and (max-width: 1199px) {
  /* BLOCKS : Heading start */
  .h1,
  h1 {
    font-size: 50px;
  }
  .h2,
  h2 {
    font-size: 44px;
  }
  .h3,
  h3 {
    font-size: 41px;
  }
  .h4,
  h4 {
    font-size: 38px;
  }
  .h5,
  h5 {
    font-size: 28px;
  }
  .h6,
  h6 {
    font-size: 23px;
    line-height: 25px;
  }
  /* BLOCKS : Heading end */
  /* BLOCKS : Content start */
  .p1,
  p {
    font-size: 23px;
    line-height: 37px;
  }
  .p2 p {
    font-size: 22px;
    line-height: 33px;
  }
  .p3 p {
    font-size: 19px;
    line-height: 29px;
  }
  .p4 p {
    font-size: 16px;
    line-height: 23px;
  }
  /* BLOCKS : Content end */
  /* BLOCKS : Button start */
  .btn {
    font-size: 16px;
    line-height: 1;
    padding: 14px 42px;
  }
  .btn {
    line-height: 1;
    padding: 15px 53px;
  }
  .btn:not([disabled]):hover {
    color: var(--btn-hover-color);
    background-color: var(--btn-bg-hover-color);
    text-decoration: none;
    transform: scale(0.98);
  }
  /* BLOCKS : Button end */
  /* BLOCKS : FAQs content start */
  .accordion {
    border: 3px solid transparent;
    padding: 42px 50px;
  }
  .accordion:not(:first-child) {
    margin-top: 20px;
  }
  /* BLOCKS : FAQs content end */
}

