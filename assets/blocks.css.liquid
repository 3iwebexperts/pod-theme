/* common ============================================================= */
/* BLOCKS : Heading start */
.h1,
.h2,
.h3,
.h4,
.h5,
.h6,
h1,
h2,
h3,
h4,
h5,
h6 {
  font-weight: 400;
  line-height: 1;
  font-family: Sequel Sans Title, sans-serif;
}
.h1, h1, .h2, h2 {
  text-transform: uppercase;
}
/* BLOCKS : Heading end */
/* BLOCKS : Content start */
p{
  margin-bottom:1rem;
  margin-top:0;
}
.p1, .p2, .p3, .p4, .p5, .p6{
  font-family:SequelSans Body,sans-serif;
}
.p1,p{font-size:17px;line-height:27px;}
.card-slider__copy{
  max-width:600px;
}
/* BLOCKS : Content end */
/* BLOCKS : Button start */
/* BLOCKS : Button end */


/* mobile ============================================================= */
/* media 0 to 991 */
@media and (max-width: 991px) {
  /* BLOCKS : Heading start */
  .h1, h1 {
    font-size: 32px;
  }
  .h2, h2 {
    font-size: 28px;
  }
  .h3, h3 {
    font-size: 26px;
  }
  .h4, h4 {
    font-size: 24px;
  }
  .h5, h5 {
    font-size: 18px;
  }
  .h6, h6 {
    font-size: 15px;
    line-height: 17px;
  }
  /* BLOCKS : Heading end */
  /* BLOCKS : Content start */
  .p2{font-size:15px;line-height:22px;font-weight:600;}
  .p3{font-size:14px;line-height:22px;}
  .p4{font-size:10px;line-height:15px;}
  .p5{font-size:14px;line-height:21px;}
  .p6{font-size:10px;line-height:1.5;}
  /* BLOCKS : Content end */
  /* BLOCKS : Button start */
  /* BLOCKS : Button end */
}

/* tablet ============================================================= */
/* media from 992 to 1199 */
@media and (min-width: 992px) and (max-width: 1199px) {
/* BLOCKS : Heading start */
  .h1, h1 {
    font-size: 50px;
  }
  .h2, h2 {
    font-size: 44px;
  }
  .h3, h3 {
    font-size: 41px;
  }
  .h4, h4 {
    font-size: 38px;
  }
  .h5, h5 {
    font-size: 28px;
  }
  .h6, h6 {
    font-size: 23px;
    line-height: 25px;
  }
  /* BLOCKS : Heading end */
  /* BLOCKS : Content start */
  .p1,p{font-size:23px;line-height:37px;}
  .p2{font-size:22px;line-height:33px;}
  .p3{font-size:19px;line-height:29px;}
  .p4{font-size:16px;line-height:23px;}
  /* BLOCKS : Content end */
  /* BLOCKS : Button start */
  /* BLOCKS : Button end */
}

/* desktop ============================================================= */
/* media from 1200 to ++ */
@media (min-width: 1200px) {
  /* BLOCKS : Heading start */
  .h1,
  h1 {
    font-size: 78px;
  }
  .h2,
  h2 {
    font-size: 68px;
  }
  .h3,
  h3 {
    font-size: 63px;
  }
  .h4,
  h4 {
    font-size: 60px;
  }
  .h5,
  h5 {
    font-size: 44px;
  }
  .h6,
  h6 {
    font-size: 37px;
    line-height: 39px;
  }
  /* BLOCKS : Heading end */
  /* BLOCKS : Content start */
  .p1,p{
    font-size:33px;
    line-height:43px;
  }
  .p2{
    font-size:22px;
    line-height:38px;
  }
  .p3{font-size:23px;line-height:37px;}
  /* BLOCKS : Content end */
  /* BLOCKS : Button start */
  /* BLOCKS : Button end */
}