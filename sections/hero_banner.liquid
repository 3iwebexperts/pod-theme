        "id": "image2",
        "label": "Mobile Image"
    },
    {
        "type": "text",
        "id": "heading",
        "label": "Heading"
    },
    {
       "type": "color",
        "id": "text_color",
        "label": "Text Color"
    },
    {
         "type": "color",
        "id": "highlight_color",
        "label": "Highlight color"
    },
    {
        "type": "text",
        "id": "subtext",
        "label": "Sub Text"
    },
    {
        "type": "text",
        "id": "button",
        "label": "Button"
    },
     {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
