<main role="main" id="MainContent">
  <div class="layout-main-content">
    <div id="shopify-section-faq" class="shopify-section">
      <style>
        .minimal-hero__header,
        .minimal-hero__subheader {
          color: #ffffff;
        }
        .pill-menu__item {
          color: #ffffff;
          border-color: #ffffff;
        }
        .pill-menu__item:hover {
          color: #0036eb;
          background-color: #ffffff;
        }



        .minimal-hero {
          background-color: #0036eb;
        }
      </style>
      <div
        class="layout-content-wrapper"
        data-section-id="faq"
        data-section-type="faq"
      >
        <div class="minimal-hero">
          {% if section.settings.heading != blank %}
            <h1 class="minimal-hero__header">{{ section.settings.heading }}</h1>
          {% endif %}
          {% if section.settings.subheading != blank %}
            <div class="minimal-hero__subheader">{{ section.settings.subheading }}</div>
          {% endif %}

          <div class="pill-menu">
      
            {% for block in section.blocks %}
              {% if block.settings.group_title != blank %}
            <a href="#group-{{ block.settings.group_title | handleize  }}" class="btn pill-menu__item">
                  {{- block.settings.group_title -}}
                </a>
              {% endif %}
            {% endfor %}
            {% if section.settings.headingcnt != blank %}
              <a href="#group-contact" class="btn pill-menu__item">{{ section.settings.headingcnt }}</a>
            {% endif %}
          
          </div>
        </div>
      </div>

      <div class="accordions " data-accordions>
        {% for block in section.blocks %}
          <dl class="accordion-group" data-accordion-group>
            {% if block.settings.group_title != blank %}
              <h2 id="group-{{ block.settings.group_title | handleize  }}" class="h3 accordion-group__header">{{ block.settings.group_title }}</h2>
            {% endif %}
            {% if block.settings.que1 != blank and block.settings.ans1 != blank %}
              <div class="accordion" data-accordion>
                <dt>
                  <button
                    type="button"
                    class="accordion__toggle"
                    aria-controls="faq-2"
                    aria-expanded="false"
                    data-accordion-toggle
                  >
                    <span class="accordion__title">{{ block.settings.que1 }}</span>
                    <span class="accordion__toggle-icon" aria-hidden="true" role="presentation"></span>
                  </button>
                </dt>

                <dd class="accordion__body" id="faq-2">
                  {{ block.settings.ans1 }}
                </dd>
              </div>
            {% endif %}
            {% if block.settings.que2 != blank and block.settings.ans2 != blank %}
