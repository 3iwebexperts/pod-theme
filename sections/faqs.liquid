  </div>
</main>
<script>
   $(document).ready(function() {
  $('.pill-menu a').click(function(e) {

    var targetHref = $(this).attr('href');

    $('html, body').animate({
      scrollTop: $(targetHref).offset().top
    }, 5000);

    e.preventDefault();
  });
});
</script>

