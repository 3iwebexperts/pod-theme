{% if section.blocks.size > 0 %}
<style>
  
  #{{ section.id }} .category-capsule--highlighted {
    border-color: #a3ff00;
  }

  #{{ section.id }} .category-capsule--highlighted:hover {
    background-color: #a3ff00;
    color: #000000;
  }
</style>
<div class="" id="{{ section.id }}" data-section-type="featured-categories">
  <div class="featured-categories swiper" data-slideshow>
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% if block.settings.menu_text != blank and block.settings.link != blank %}
          <a
          
            href="{{block.settings.link}}"
            class="swiper-slide category-capsule  {% if block.settings.checkbox != blank %}  category-capsule--highlighted {% endif %} "
            data-slide
          >
            
            {{- block.settings.menu_text -}}
          </a>
        {% endif %}
      {% endfor %}

    </div>

    <div class="featured-categories__navigation">
      <span
        class="featured-categories__navigation-area featured-categories__navigation-area--prev"
        data-arrow-prev
        aria-label="Scroll to prev slide"
      ></span>
      <span
        class="featured-categories__navigation-area featured-categories__navigation-area--next"
        data-arrow-next
        aria-label="Scroll to next slide"
      ></span>
    </div>
  </div>
</div>
{% endif %}
{% schema %}
{
  "name": "NEW - Collection links",
  "tag": "section",
  "settings": [],
  "presets": [
    {
      "name": "NEW - Collection links"
    }
  ],
  "blocks": [
     {
       "name": "Collection",
       "type": "text",
       "settings": [
         {
           "type": "text",
           "id":"menu_text",
           "label": "Menu Button"
         },
         {
            "type": "url",
           "id":"link",
           "label": "Button Link"
         },
         {
           "type":"checkbox",
           "id":"checkbox",
           "label":"Checkbox"
         }
       ]
     }
   ]
}
{% endschema %}