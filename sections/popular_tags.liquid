<div class="poular_tags">
  {% if section.settings.heading != blank %}
  <div class="popular_title"><h4>{{ section.settings.heading }}</h4></div>
    {% endif %}
  <div class="btags_list">
    {% for block in section.blocks %}
      {% if block.settings.popular_tag != blank and block.settings.link %}
    <div class="btag_item">
     <a href="{{ block.settings.link }}" title="{{ block.settings.popular_tag }}">{{ block.settings.popular_tag }}</a>

    </div>
    <span class="vline">|</span>
    {% endif %}
    {% endfor %}

   
  </div>
</div>

{% schema %}
{
  "name": "Popular Tags",
  "settings": [
    {
           "type": "text",
           "id":"heading",
           "label": "Heading"
         }
  ],
    "presets": [
    {
      "name": "Popular Tags"
    }
  ],
  "blocks": [
     {
       "name": "Popular Tag name",
       "type": "text",
       "settings": [
         
         {
           "type": "text",
           "id":"popular_tag",
           "label": "Popular Tags Name"
         },
         {
            "type": "url",
           "id":"link",
           "label": "Tag Link"
         }
         
       ]
     }
  ]
  }
{% endschema %}

