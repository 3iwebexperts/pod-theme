{% comment %}
{%- if section.blocks.size > 0 -%}
<link href="{{ 'faq_box.css' | asset_url }}" rel="stylesheet" type="text/css" media="all">
<div class="section section-boxed bg-custom collapsible-tab">
  <div class="section-stack section-stack--horizontal faq_box">
     {%- content_for 'blocks' -%}
  </div>
</div>
{%- endif -%}
{% endcomment %}

{%- if section.blocks.size > 0 -%}
<div class="section section-boxed bg-custom">
  <div class="section-stack section-stack--horizontal ">
    {%- content_for 'blocks' -%}
    <div class="section-stack__intro">
      <div class="v-stack gap-10">
        <div class="prose ">
          {% if section.settings.que_heading != blank %}
            <h2 class="h2">{{ section.settings.que_heading }}</h2>
          {% endif %}
          {% if section.settings.subtext != blank %}
            <p>
              {{ section.settings.subtext }}
            </p>
          {% endif %}
        </div>
        <div class="icon_text desk">
          <div class="faq-availability">
            <div class="v-stack gap-4">
              {% if section.settings.image != blank %}
                <img
                  src="{{ section.settings.image | img_url: "346x" }}"
                  alt=""
                  srcset="{{ section.settings.image | img_url: "346x" }}"
                  width="346"
                  height="96"
                  loading="lazy"
                  style="max-width: 160px"
                  sizes="160px"
                >
              {% endif %}
              {% if section.settings.bottomtext != blank %}
                <div class="v-stack">
                  <p>
                    {{ section.settings.bottomtext -}}
                    <br>
                    {% if section.settings.time != blank %}
                      <span class="text-subdued">{{ section.settings.time }}</span>
                    {% endif %}
                  </p>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="section-stack__main">
      <div class="accordion-box rounded bg-secondary">
        {% for block in section.blocks %}
          <div class=" accordion  group" aria-expanded="false" is="accordion-disclosure">
            {% if block.settings.que != blank %}
              <div class="accordion__toggle bold">
                <span> {{ block.settings.que }}</span
                ><span class="circle-chevron group-hover:colors group-expanded:colors group-expanded:rotate">
                  <i class="fa fa-chevron-down" aria-hidden="true"></i>
                </span>
              </div>
            {% endif %}

            <div class="accordion__content" style="display:none;">
              {% if block.settings.ans != blank %}
                <div class="prose">
                  <p>
                    {{ block.settings.ans }}
                  </p>
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="icon_text mob">
      <div class="faq-availability">
        <div class="v-stack gap-4">
        {% if section.settings.mobileicon != blank %}
          <img
            src="{{ section.settings.mobileicon | img_url:"346x" }}"
            alt=""
            srcset="{{section.settings.mobileicon | img_url:"346x" }}"
            width="346"
            height="96"
            loading="lazy"
            style="max-width: 160px"
            sizes="160px"
          >
          {% endif %} 
          {% if section.settings.mobile_text != blank %}
          <div class="v-stack">
            <p>
              {{ section.settings.mobile_text }}<br>
              {% if section.settings.mobile_time != blank %}
              <span class="text-subdued">{{ section.settings.mobile_time }}</span>
                {% endif %}
            </p>
          </div>
            {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
{%- endif -%}


{% schema %}
  {
    "name": "New - Faq-box",
    "settings": [],
    "tag": "section",
    "max_blocks": 5,
    "blocks": [{"type": "@theme"}],
    "presets":[
      {
        "name": "New - Faq-box"
      }
    ]
  }
{% endschema %}