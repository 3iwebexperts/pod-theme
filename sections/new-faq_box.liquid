<div class="section section-boxed bg-dark">
  <div class="section-stack section-stack--horizontal ">
    <div class="section-stack__intro">
      <div class="v-stack gap-10">
        <div class="prose ">
          {% if section.settings.heading != blank %}
            <h2 class="h2">{{ section.settings.heading }}</h2>
          {% endif %}
          {% if section.settings.content != blank %}
            <div>
              {{ section.settings.content }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
    {% if section.blocks.size > 0 %}
    <div class="section-stack__main">
      <div class="accordion-box rounded bg-secondary">
        {% for block in section.blocks %}
          <div class=" accordion  group" aria-expanded="false" is="accordion-disclosure">
            {% if block.settings.que != blank %}
              <div class="accordion__toggle bold">
                <span> {{ block.settings.que }}</span
                ><span class="circle-chevron group-hover:colors group-expanded:colors group-expanded:rotate">
                  <i class="fa fa-chevron-down" aria-hidden="true"></i>
                </span>
              </div>
            {% endif %}
            <div class="accordion__content" style="display:none;">
              {% if block.settings.ans != blank %}
                <div class="prose">
                  <p>
                    {{ block.settings.ans }}
                  </p>
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "FAQs Box",
  "class":"faq_box card-slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Lorem ipsum dolor sit amet"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>consectetur adipiscing elit. Aenean volutpat hendrerit nisi eu malesuada. Donec luctus elit odio, nec hendrerit lacus elementum ac</p>"
    }
  ],
  "presets": [
    {
      "name": "NEW - FAQs Box"
    }
  ],
  "blocks": [
     {
       "name": "Question and Answer",
       "type": "text",
       "settings": [
         {
           "type": "text",
           "id": "que",
           "label": "Question",
           "default": "Lorem ipsum dolor sit amet"
         },
         {
           "type": "richtext",
           "id": "ans",
           "label": "Answer",
           "default": "<p>consectetur adipiscing elit. Aenean volutpat hendrerit nisi eu malesuada. Donec luctus elit odio, nec hendrerit lacus elementum ac</p>"
         }
       ]
     }
  ]
}
{% endschema %}
