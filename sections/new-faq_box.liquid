<div class="section section-boxed bg-dark">
  <div class="section-stack section-stack--horizontal ">
    <div class="section-stack__intro">
      <div class="v-stack gap-10">
        <div class="prose ">
          {% if section.settings.heading != blank %}
            <h2 class="h2">{{ section.settings.heading }}</h2>
          {% endif %}
          {% if section.settings.content != blank %}
            <div>
              {{ section.settings.content }}
            </div>
          {% endif %}
        </div>
        {% if section.settings.image != blank %}
        <div class="icon_text desk">
          <div class="faq-availability">
            <div class="v-stack gap-4">
                <img
                  src="{{ section.settings.image | img_url: "346x" }}"
                  alt=""
                  srcset="{{ section.settings.image | img_url: "346x" }}"
                  width="346"
                  height="96"
                  loading="lazy"
                  style="max-width: 160px"
                  sizes="160px"
                >
              
            </div>
          </div>
        </div>
        {% endif %}
      </div>
    </div>
    {% if section.blocks.size > 0 %}
    <div class="section-stack__main">
      <div class="accordion-box rounded bg-secondary">
        {% for block in section.blocks %}
          <div class=" accordion  group" aria-expanded="false" is="accordion-disclosure">
            {% if block.settings.que != blank %}
              <div class="accordion__toggle bold">
                <span> {{ block.settings.que }}</span
                ><span class="circle-chevron group-hover:colors group-expanded:colors group-expanded:rotate">
                  <i class="fa fa-chevron-down" aria-hidden="true"></i>
                </span>
              </div>
            {% endif %}

            <div class="accordion__content" style="display:none;">
              {% if block.settings.ans != blank %}
                <div class="prose">
                  <p>
                    {{ block.settings.ans }}
                  </p>
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    {% endif %}

    {% if section.settings.mobileicon != blank %}
    <div class="icon_text mob" style="display:none;">
      <div class="faq-availability">
        <div class="v-stack gap-4">
          <img
            src="{{ section.settings.mobileicon | img_url:"346x" }}"
            alt=""
            srcset="{{section.settings.mobileicon | img_url:"346x" }}"
            width="346"
            height="96"
            loading="lazy"
            style="max-width: 160px"
            sizes="160px"
          >
        </div>
      </div>
    </div>
    {% endif %} 
  </div>
</div>

{% schema %}
{
  "name": "FAQs Box",
  "class":"faq_box card-slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Lorem ipsum dolor sit amet"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>consectetur adipiscing elit. Aenean volutpat hendrerit nisi eu malesuada. Donec luctus elit odio, nec hendrerit lacus elementum ac</p>"
    },
    {
       "type": "image_picker",
      "id": "image",
      "label": "Icon"
    },
    {
      "type": "image_picker",
      "id": "mobileicon",
      "label": "Mobile Icon"
    },
    {

       "type": "textarea",
      "id": "mobile_text",
      "label": "Mobile Bottom Text"
    },
     {
      "type": "text",
      "id": "mobile_time",
      "label": "Mobile Time Text"
    }
  ],
  "presets": [
    {
      "name": "NEW - FAQs Box"
    }
  ],
  "blocks": [
     {
       "name": "Question and Answer",
       "type": "text",
       "settings": [
         {
           "type": "text",
           "id": "que",
           "label": "Question"
         },
         {
           "type": "text",
           "id": "ans",
           "label": "Answer"
         }
       ]
     }
  ]
}
{% endschema %}
