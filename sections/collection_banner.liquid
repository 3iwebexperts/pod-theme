<div
  class="collection-banner findify-collection-banner layout-content-wrapper "
  data-section-id="findify-collection-banner"
  data-section-type="collection-banner"
>
  {% assign coll_parent = collection.metafields.custom.parent_collection.value %}
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-xl-22 col-lg-22 col-md-20 col-sm-22 col-22 collection-banner-inner-wrapper">
        <div>
          <div class="breadcrumbs">
            <a href="/" title="Home">Home</a>
            <span aria-hidden="true"> / </span>
            {% if coll_parent != blank %}
              <a href="{{ coll_parent.url }}" title="{{ coll_parent.title }}">{{ coll_parent.title }}</a>
              <span aria-hidden="true"> / </span>
            {% endif %}
            <div class="title">{{ collection.title }}</div>
          </div>
          <div class="main_title">
            <h1 class="collection-banner__title text-left h1">{{ collection.title }}</h1>
            {{ collection.description }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Collection Banner",
  "settings": [],
   "presets": [
  {
    "name": "Collection Banner"
  }
]
}
{% endschema %}

