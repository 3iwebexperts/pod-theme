<div
  id="hero-{{ section.id }}"
  class="hero container-fluid hero--vertical-center hero--horizontal-center hero--horizontal-center-m hero--vertical-center-m"
  data-section-id="16518471114edcf1ed"
  data-section-type="hero"
>
  <style>
    #hero-{{ section.id }} .hero__text,
    #hero-{{ section.id }} .hero__title {
      color: #ffffff;
    }
  </style>

  <!-- <div style="padding:66.67% 0 0 0;position:relative;">
    <iframe src="https://player.vimeo.com/video/883567405?badge=0&amp;autopause=0&amp;quality_selector=1&amp;player_id=0&amp;app_id=58479" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" style="position:absolute;top:0;left:0;width:100%;height:100%;" title="4c3a1303-b69a-45b4-af0c-e50f92618fc5"></iframe>
  </div> -->
  <!-- <script src="https://player.vimeo.com/api/player.js"></script> -->
  <div class="hero__video-container">
    <!-- <iframe src="https://player.vimeo.com/video/883567405?badge=0&amp;autopause=0&amp;quality_selector=1&amp;player_id=0&amp;app_id=58479" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" style="position:absolute;top:0;left:0;width:100%;height:100%;" title="4c3a1303-b69a-45b4-af0c-e50f92618fc5"></iframe> -->
    
     {% if section.settings.video_sec != blank %}
       <video
      data-background-video
      autoplay
      loop
      muted
      playsinline
    >
        <source
          type="video/mp4"
          src="{{ section.settings.video_sec }}"
          data-mp4-video
        >
    </video>
    {% else %}
       <video-media host="{{ section.settings.external_video_url.type }}">
      <template>
          <iframe src="https://player.vimeo.com/video/{{ section.settings.external_video_url.id }}?autopause=1&{% if section.settings.autoplay %}background=1&autoplay=1&loop=1&muted=1&{% endif %}transparent=0&responsive=1&portrait=0&title=0&byline=0&color={{ settings.text_color | remove_first: '#' }}" allow="autoplay; encrypted-media;" allowfullscreen="allowfullscreen"></iframe>
      </template>
  </video-media>
    {% endif %}
  </div>

  <div class="hero__inner col-20 col-lg-11">
    {% if section.settings.image != blank %}
      <img
        src="{{ section.settings.image | img_url: "368x" }}"

        srcset="{{ section.settings.image | img_url: "368x" }}"
        class="hero__title-image"
        sizes="100vw"
        loading="lazy"
        alt=""
        width="368"
        height="300"
      >
     {% endif %}
    {% if section.settings.title_cnt != blank %}
      <h1 class="hero__title h1">
        {{ section.settings.title_cnt }}
      </h1>
    {% endif %}
    {% if section.settings.subtext != blank %}
      <p class="hero__text p2">{{ section.settings.subtext }}</p>
    {% endif %}

    {% if section.settings.button_text != blank and section.settings.link != blank %}
      <div>
        <a href="{{ section.settings.link }}" class="btn btn-white btn-white-m hero__btn">
          {{ section.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Hero Video",
  "settings": [

     {
        "type": "text",
        "id": "video_sec",
        "label": "Video Link",
        "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc"
    },

    {

            "type": "image_picker",
           "id": "image",
           "label": "Image"
    },
     {
           "type": "text",
           "id": "title_cnt",
           "label": "Title Contant"
   },
     {
           "type": "text",
           "id": "subtext",
           "label": "Text"
   },
      {
            "type": "text",
           "id": "button_text",
           "label": "Button"
     },
    {
      "type":"url",
           "id":"link",
           "label":"Button Link"
    }



  ],
  "presets": [
    {
      "name": "Hero Video"
    }
  ]

}
{% endschema %}

