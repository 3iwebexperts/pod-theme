<div class="row">
  <div class="card-slider__heading">
    <div class="card-slider__info-container">
      {% if block.settings.heading != blank %}
        <h2 class="card-slider__title h2">{{ block.settings.heading }}</h2>
      {% endif %}
      {% if block.settings.content != blank %}
        <p class="card-slider__copy p3">{{ block.settings.content }}</p>
      {% endif %}
    </div>
    <div class="card-slider__cta-container">
      <a class="btn-link card-slider__button" href="{{ collection.url }}">Shop All</a>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "NEW - Content Group",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default":"NEW DROPS"
    },
    {
      "type": "text",
      "id": "content",
      "label": "Content",
      "default":"The latest Sport Utility Gear to hit the site."
    },
        {
       "type": "color",
        "id": "heading_color",
        "label": "Heading Color"
    },
        {
       "type": "color",
        "id": "text_color",
        "label": "Text Color"
    }
  ],
  "presets": [
    {
      "name": "NEW - Content Group"
    }
  ]
}
{% endschema %}