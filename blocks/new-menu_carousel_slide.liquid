<a href="{{ block.settings.link }}" class="navigation-carousel__card swiper-slide">
  <div class="navigation-carousel__image-container frame frame--16x9">
    {% if block.settings.image != blank %}
      <img
        src="{{ block.settings.image | img_url:'master' }}"
        alt="{{ block.settings.image.alt }}"
        class="frame__inner navigation-carousel__image"
      />
    {% else %}
      <img
        src="{{ 'placeholder.png' | asset_url }}"
        alt="placeholder"
        class="frame__inner navigation-carousel__image"
      />
    {% endif %}
  </div>
  {% if block.settings.text != blank %}
    <div class="navigation-carousel__card-title">
      {{ block.settings.text }}
    </div>
  {% endif %}
</a>
{% schema %}
  {
    "name": "NEW - Menu carousel slide",
    "tag": null,
    "settings": [
       {
         "type": "text",
         "id":"text",
         "label": "Text",
         "default":"Bundle & Save"
       },
       {
         "type": "url",
         "id":"link",
         "label": "Link"
       },
       {
         "type": "image_picker",
         "id":"image",
         "label": "Image"
       }
    ]
  }
{% endschema %}
