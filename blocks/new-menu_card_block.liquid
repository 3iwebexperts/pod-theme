<a href="{{ block.settings.link }}" class="card-block">
  <div class="card-block__content">
    <div class="card-block__image-container frame frame--16x9">
      {% if block.settings.image != blank %}
        <img
          src="{{ block.settings.image | img_url: "master" }}"
          alt="{{ block.settings.image.alt }}"
          class="card-block__image frame__inner"
        />
      {% else %}
        <img
          src="{{ 'placeholder.png' | asset_url }}"
          alt="placeholder"
          class="frame__inner navigation-carousel__image"
        />
      {% endif %}
    </div>
    <div class="card-block__body-container">
      {% if block.settings.text != blank %}
        <div class="card-block__title">{{ block.settings.text }}</div>
      {% endif %}
      {% if block.settings.content != blank %}
        <div class="card-block__description">{{ block.settings.content }}</div>
      {% endif %}
    </div>
  </div>
</a>
{% schema %}
{
  "name": "NEW - Menu card block",
  "settings": [
    {
     "type": "text",
     "id":"text",
     "label": "Title",
     "default":"Bundle & Save"
    },
    {
     "type": "text",
     "id": "content",
     "label": "Content",
     "default":"Bundle & Save"
    },
    {
     "type": "url",
     "id": "link",
     "label": "Link"
    },
    {
     "type": "image_picker",
     "id": "image",
     "label": "Image"
    }
  ],
  "presets":[
    {
      "name": "NEW - Menu card block"
    }
  ]
}
{% endschema %}
