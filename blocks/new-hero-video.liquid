   <div class="hero__video-container">

    <video
      data-background-video
      autoplay
      loop
      muted
      playsinline
        {% if block.settings.image != blank %}
                poster="https://media.geeksforgeeks.org/wp-content/uploads/20190627130930/a218.png"
              {% endif %}
    >
      {%- if block.settings.video_sec != blank -%}
        <source
          type="video/mp4"
          src="{{ block.settings.video_sec }}"
          data-mp4-video
         
        >
      {%- else -%}
        <source
          type="video/mp4"
          src="https://cdn.shopify.com/videos/c/o/v/dca3da5ba23f4dc4a4bbec7fb73f778d.mp4"
          data-mp4-video
        >
      {%- endif -%}
    </video>
    
  </div>
    
 
 {% schema %}
  {
    "name": "New - Hero-video",
    "settings": [
        {
          "type": "text",
          "id": "video_sec",
          "label": "Video Link",
          "info": "Put .mp4 video link"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
    ],
    "presets":[
      {
        "name": "New - Hero-video"
      }
    ]
  }
{% endschema %}