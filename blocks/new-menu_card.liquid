{% assign collection = block.settings.collection %}
{% if collection != blank %}
<a href="{{ collection.url }}" class="image_card {% if block.settings.enable_highlight != blank %}image_card--highlighted{% endif %}">
  <div class="image-card__image-container frame frame--1x1">
    {% if collection.image != blank %}
      <img src="{{ collection.image | img_url: '250x' }}" alt="{{ collection.title }}" class="frame__inner" />
    {% else %}
      <img src="{{ 'placeholder.png' | asset_url }}" alt="{{ collection.title }}" class="frame__inner" />
    {% endif %}
  </div>
  <div class="image-card__title">
    {%- if block.settings.highlight_text != blank -%}
      <b class="image-card__highlight-text">{{ block.settings.highlight_text }}</b>
    {%- endif -%}
  </div>
</a>
{% endif %}
{% schema %}
{
  "name": "NEW - Menu card",
  "settings": [
    {
      "type": "collection",
      "id":"collection",
      "label": "Collection"
    },
    {
      "type": "checkbox",
      "id":"enable_highlight",
      "label": "Enable Highlight Collection",
      "default": false
    },
    {
      "type": "text",
      "id":"highlight_text",
      "label": "Highlight Text"
    }
  ]
}
{% endschema %}
