{% if block.settings.title != blank %}
  <div class="card-grid__title">{{ block.settings.title }}</div>
{% endif %}
<div class="card-grid__grid">
  {%- content_for "blocks"  -%}
</div>
{% schema %}
  {
    "name": "Menu collection cards",
    "tag": "div",
    "class": "card-grid",
    "blocks": [{"type":"@theme"}],
    "settings": [
      {
       "type": "text",
       "id":"title",
       "label": "Tab title",
       "default": "Men"
     }
    ],
    "presets":[
      {
        "name": "Menu collection cards",
        "blocks": [
          {
            "type": "new-menu_collection_card"
          },
          {
            "type": "new-menu_collection_card"
          },
          {
            "type": "new-menu_collection_card"
          }
        ]
      }
    ]
  }
{% endschema %}
{% comment %}
  "blocks":[
    {
      "type": "card",
      "settings":[
        {
          "type": "collection",
          "id":"collection",
          "label": "Collection"
        },
        {
          "type": "checkbox",
          "id":"enable_highlight",
          "label": "Enable Highlight Collection",
          "default": false
        },
        {
          "type": "text",
          "id":"highlight_text",
          "label": "Highlight Text"
        }
      ]
    }
  ]
{% endcomment %}