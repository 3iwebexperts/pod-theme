<div class="section-stack__main" {{ block.shopify_attributes }}>
  <div class="accordion-box rounded bg-secondary">
    {%- content_for "blocks" -%}
    {% comment %}
    {% for block in section.blocks %}
      <div class=" accordion  group" aria-expanded="false" is="accordion-disclosure">
        {% if block.settings.que != blank %}
          <div class="accordion__toggle bold">
            <span> {{ block.settings.que }}</span
            ><span class="circle-chevron group-hover:colors group-expanded:colors group-expanded:rotate">
              <i class="fa fa-chevron-down" aria-hidden="true"></i>
            </span>
          </div>
        {% endif %}

        <div class="accordion__content" style="display:none;">
          {% if block.settings.ans != blank %}
            <div class="prose">
              <p>
                {{ block.settings.ans }}
              </p>
            </div>
          {% endif %}
        </div>
      </div>
    {% endfor %}
    {% endcomment %}
  </div>
</div>
{% schema %}
  {
    "name": "NEW - FAQs Group",
    "tag": null,
    "blocks": [{"type": "@theme"}],
    "settings": [],
    "presets": [
      {
        "name": "NEW - FAQs Group"
      }
    ]
  }
{% endschema %}