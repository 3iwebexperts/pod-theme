{%- assign block_id =  block.id | split : "__"  -%}
{%- for id in block_id -%}
  {{ id }}
{%- endfor -%}
<div class="accordion group" aria-expanded="false" is="accordion-disclosure" {{ block.shopify_attributes }}>
  {% if block.settings.que != blank %}
    <div class="accordion__toggle bold">
      <span> {{ block.settings.que }}</span
      ><span class="circle-chevron group-hover:colors group-expanded:colors group-expanded:rotate">
        <i class="fa fa-chevron-down" aria-hidden="true"></i>
      </span>
    </div>
  {% endif %}
  {% if block.settings.ans != blank %}
    <div class="accordion__content" style="display:none;">
      <div class="prose">
        <p>
          {{ block.settings.ans }}
        </p>
      </div>
    </div>
  {% endif %}
</div>

{% schema %}
  {
    "name": "NEW - FAQ content",
    "tag": null,
    "settings": [
       {
         "type": "text",
         "id": "que",
         "label": "Question",
         "default": "Lorem ipsum dolor sit amet"
       },
       {
         "type": "text",
         "id": "ans",
         "label": "Answer",
         "default": "Aenean fringilla massa eu risus sollicitudin vestibulum. Mauris sed bibendum diam, a aliquet tortor."
       }
    ],
    "presets": [
      {
        "name": "NEW - FAQ content"
      }
    ]
  }
{% endschema %}