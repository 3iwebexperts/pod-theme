{% if block.settings.title != blank %}
  <h2 class="info-card__header">{{ block.settings.title }}</h2>
{% endif %}
<div class="info-card">
  <div class="info-card__image-container frame frame--1x1">
    {% if block.settings.image != blank %}
      <img src="{{ block.settings.image | img_url: "80x" }}" class="frame__inner info-card__image" />
    {% else %}
      <img src="{{ "placeholder.png" | asset_url }}" class="frame__inner info-card__image" />
    {% endif %}
  </div>
  {% if block.settings.title_2 != blank %}
    <h3 class="info-card__title">{{ block.settings.title_2 }}</h3>
  {% endif %}
  {% if block.settings.content != blank %}
    <div class="info-card__body">
      {{ block.settings.content }}
    </div>
  {% endif %}
  <div class="info-card__buttons-container">
    {% if block.settings.caption != blank and block.settings.link != blank %}
      <a href="{{ block.settings.link }}" class="btn btn-white">
        {{- block.settings.caption -}}
      </a>
    {% endif %}
    {% if block.settings.caption_2 != blank and block.settings.link_2 != blank %}
      <a href="{{ block.settings.link_2 }}" class="btn btn-white">
        {{- block.settings.caption_2 -}}
      </a>
    {% endif %}
  </div>
</div>
{% schema %}
{
  "name": "NEW - Menu promotion",
  "tag": "div",
  "class": "info-card__container",
  "settings": [
   {
     "type": "image_picker",
     "id":"image",
     "label": "Promotion box image"
   },
   {
     "type": "text",
     "id":"title",
     "label": "Promotion box heading",
     "default": "CUSTOMER SERVICE"
   },
   {
     "type": "text",
     "id":"title_2",
     "label": "Promotion box title",
     "default": "Got Questions?"
   },
   {
     "type": "richtext",
     "id":"content",
     "label": "Promotion box Description",
     "default": "<p>Hit up our Customer Experience team! They are&nbsp;<strong>real people</strong>&nbsp;ready to help out.</p>"
   },
   {
     "type": "text",
     "id":"caption",
     "label": "Button 1 Caption",
     "default": "Email Us"
   },
   {
     "type": "url",
     "id":"link",
     "label": "Button 1 Link"
   },
   {
     "type": "text",
     "id":"caption_2",
     "label": "Button 2 Caption",
     "default": "Read FAQ"
   },
   {
     "type": "url",
     "id":"link_2",
     "label": "Button 2 Link"
   }
  ],
  "presets": [
    {
      "name": "NEW - Menu promotion"
    }
  ]
}
{% endschema %}
