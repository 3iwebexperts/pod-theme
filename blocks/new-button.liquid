{%- if block.settings.button_text != blank and block.settings.button_link != blank -%}
<div {{ block.shopify_attributes }}>
  <a href="{{ block.settings.button_link }}" class="btn {{ block.settings.button_type }}">
    {{ block.settings.button_text }} 
  </a>
</div> 
{%- endif -%}


 {% schema %}
  {
    "name": "New - Button",
    "tag": null,
    "settings": [
    {
    "type": "text",
    "id": "button_text",
    "label": "Button Text",
    "default": "Button Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Url",
      "default": "/"
    },
    {
      "type": "checkbox",
      "id": "link_button",
      "label": "Link Button"
    },
    {
       "type": "select",
        "id": "button_type",
        "label": "Select Button type",
        "options": [
          {
            "value": "block-button",
            "label": "Block Button"
          },
          {
            "value": "btn-link",
            "label": "Under Line button"
          },
          {
            "value": "ovel-buttonn",
            "label": "Ovel button"
          }
        ],
      "default":"block-button"
    }
    ],
    "presets" : [
      {
        "name": "New - Button"
      }
    ]
  }
{% endschema %}